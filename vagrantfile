Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/xenial64"
  config.vm.synced_folder "./files", "/home/vagrant/shared"
  config.vm.provision "shell", inline: <<-SHELL
    apt-get update
    apt-get upgrade -y
    apt-get install -y python3-pip
    sudo python3 -m pip install --upgrade pip
  SHELL
  config.vm.provision :shell, path: "script.sh" # Provisioning for mysql server with script.sh
  config.vm.network "forwarded_port", guest: 5000, host: 5000, host_ip: "0.0.0.0"
end
